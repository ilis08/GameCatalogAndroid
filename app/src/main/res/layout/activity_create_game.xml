<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="#FFFFFF"
    tools:context=".CreateGame">

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="62dp"
        android:hint="Title"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="62dp"
        android:hint="Description"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTitle"></EditText>

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="62dp"
        android:hint="Price"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDescription"></EditText>

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="114dp"
        android:layout_height="48dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="107dp"
        android:text="Create"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPrice"></Button>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="114dp"
        android:layout_height="48dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="43dp"
        android:onClick="getGames"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPrice" />


</androidx.constraintlayout.widget.ConstraintLayout>